{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "ES6",
        "removeComments": false,
        "outDir": "dist"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "typings/*.d.ts"
    ],
    "files": [
        "src/Cli.ts",
        "src/Component.ts",
        "src/ComponentFile.ts",
        "src/ComponentRegistry.ts",
        "src/ComponentWriter.ts",
        "src/Config.ts",
        "src/Doc.ts",
        "src/HandlebarsRenderer.ts",
        "src/MarkdownRenderer.ts",
        "src/Node.ts",
        "src/PlainComponentListWriter.ts",
        "src/Renderer.ts",
        "src/StructureReader.ts",
        "src/StructureWriter.ts",
        "src/Styleguide.ts",
        "src/Templating.ts",
        "typings/denodeify/denodeify.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/handlebars/handlebars.d.ts",
        "typings/marked/marked.d.ts",
        "typings/mkdirp/mkdirp.d.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
