{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "removeComments": false,
        "outDir": "dist"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "typings/*.d.ts"
    ],
    "files": [
        "src/Cli.ts",
        "src/CompilableContent.ts",
        "src/Component.ts",
        "src/ComponentList.ts",
        "src/ComponentRegistry.ts",
        "src/ComponentWriter.ts",
        "src/Config.ts",
        "src/ContentStructureWriter.ts",
        "src/Doc.ts",
        "src/HandlebarsRenderer.ts",
        "src/lib/RemarkableUpfront.ts",
        "src/Logger.ts",
        "src/MarkdownRenderer.ts",
        "src/Node.ts",
        "src/Page.ts",
        "src/PageLayout.ts",
        "src/Partial.ts",
        "src/PlainComponentList.ts",
        "src/Renderer.ts",
        "src/StructureReader.ts",
        "src/StructureWriter.ts",
        "src/Styleguide.ts",
        "src/TagListWriter.ts",
        "src/View.ts",
        "typings/denodeify/denodeify.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/fs-extra/fs-extra.d.ts",
        "typings/handlebars/handlebars.d.ts",
        "typings/js-yaml/js-yaml.d.ts",
        "typings/mkdirp/mkdirp.d.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
