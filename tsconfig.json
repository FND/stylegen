{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "ES6",
        "removeComments": false,
        "outDir": "dist"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "src/type_defs/*.ts"
    ],
    "files": [
        "src/Cli.ts",
        "src/Component.ts",
        "src/ComponentWriter.ts",
        "src/Config.ts",
        "src/Node.ts",
        "src/Renderer.ts",
        "src/StructureReader.ts",
        "src/Styleguide.ts",
        "src/Templating.ts",
        "src/type_defs/denodeify.d.ts",
        "src/type_defs/handlebars.d.ts",
        "src/type_defs/mkdirp.d.ts",
        "src/type_defs/node.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
